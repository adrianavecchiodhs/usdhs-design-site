{
  "cacheBust": true,
  "cleanPublic": true,
  "defaultPattern": "all",
  "defaultShowPatternInfo": false,
  "disableDeprecationWarningForHiddenPatterns": true,
  "ishControlsHide": {
    "s": false,
    "m": false,
    "l": false,
    "full": false,
    "random": false,
    "disco": false,
    "hay": true,
    "mqs": false,
    "find": false,
    "views-all": false,
    "views-annotations": false,
    "views-code": false,
    "views-new": false,
    "tools-all": false,
    "tools-docs": false
  },
  "ishViewportRange": {
    "s": [240, 500],
    "m": [500, 800],
    "l": [800, 2600]
  },
  "logLevel": "info",
  "outputFileSuffixes": {
    "rendered": ".rendered",
    "rawTemplate": "",
    "markupOnly": ".markup-only"
  },
  "paths": {
    "source": {
      "root": "./src/",
      "patterns": "./src/",
      "data": "./src/styleguide/data/",
      "meta": "./src/styleguide/meta/",
      "annotations": "./src/styleguide/annotations/",
      "styleguide": "./dist/",
      "patternlabFiles": {
        "general-header": "views/partials/general-header.mustache",
        "general-footer": "views/partials/general-footer.mustache",
        "patternSection": "views/partials/patternSection.mustache",
        "patternSectionSubgroup": "views/partials/patternSectionSubgroup.mustache",
        "viewall": "views/viewall.mustache"
      },
      "js": "./dist/js",
      "images": "./dist/img",
      "fonts": "./dist/fonts",
      "css": "./dist/css"
    },
    "public": {
      "root": "./build/",
      "patterns": "./build/",
      "data": "./build/styleguide/data/",
      "annotations": "./build/annotations/",
      "styleguide": "./build/styleguide/",
      "js": "./build/js",
      "images": "./build/img",
      "fonts": "./build/fonts",
      "css": "./build/css"
    }
  },
  "patternExtension": "twig",
  "patternStateCascade": ["inprogress", "inreview", "complete"],
  "patternExportDirectory": "./pattern_exports/",
  "patternExportPatternPartials": [],
  "serverOptions": {
    "wait": 1000
  },
  "starterkitSubDir": "dist",
  "styleGuideExcludes": [
    "compare",
    "test-patterns"
  ],
  "theme": {
    "color": "light",
    "density": "comfortable",
    "layout": "vertical",
    "logo": {
      "text": "USWDS",
      "url": "./?p=all",
      "srcLight": "https://raw.githubusercontent.com/uswds/uswds-site/main/img/uswds-logo/4c-lg-on-white.svg",
      "width": "25",
      "height": "25"
    }
  },
  "uikits": [
    {
      "package": "@pattern-lab/uikit-workshop",
      "outputDir": "",
      "enabled": true,
      "excludedPatternStates": [],
      "excludedTags": []
    }
  ],
  "engines": {
    "twig": {
      "namespaces": [
        {
          "id": "uikit",
          "recursive": true,
          "paths": [
            "./node_modules/@pattern-lab/uikit-workshop/views-twig"
          ]
        },
        {
          "id": "components",
          "recursive": true,
          "paths": [
            "./src/components"
          ]
        },
        {
          "id": "compare",
          "recursive": true,
          "paths": [
            "./src/compare"
          ]
        }
      ]
    }
  }
}
